{
  "openapi": "3.0.3",
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Development"
    }
  ],
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "MailKey": {
        "type": "object",
        "required": [
          "id",
          "subject"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "subject": {
            "type": "string"
          }
        }
      },
      "UserIndex": {
        "type": "object",
        "required": [
          "id",
          "email"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "UserShow": {
        "type": "object",
        "required": [
          "id",
          "email",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date_time"
          },
          "updated_at": {
            "type": "string",
            "format": "date_time"
          }
        }
      }
    }
  },
  "paths": {
    "api/v1/users/{user_id}/mail_keys": {
      "get": {
        "summary": "Returns all mail_keys",
        "tags": [
          "MailKeys"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mail keys are returned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/MailKey"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "api/v1/users/{user_id}/mail_keys/sync": {
      "get": {
        "summary": "Sync all mail_keys with user's mail box",
        "tags": [
          "MailKeys"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mail keys are synced successfully"
          }
        }
      }
    },
    "api/v1/users": {
      "post": {
        "summary": "Creates a user",
        "tags": [
          "Users"
        ],
        "parameters": [],
        "responses": {
          "201": {
            "description": "User is created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UserShow"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "User is not created if email is invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Error"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "required": [
                      "email",
                      "credential_data"
                    ],
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "credential_data": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Returns all users",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Users are returned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/UserIndex"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
